<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.wallet2.ui.user.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragmentDest" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.wallet2.ui.user.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragmentDest"
        android:name="com.example.wallet2.ui.dashboard.DashboardFragment"
        android:label="DashboardFragment"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_sendFragment"
            app:destination="@id/sendFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_receiveFragment"
            app:destination="@id/receiveFragment" />
        <action
            android:id="@+id/action_dashboardFragmentDest_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/receiveFragment"
        android:name="com.example.wallet2.ui.receive.ReceiveFragment"
        android:label="ReceiveFragment"
        tools:layout="@layout/fragment_receive">
        <action
            android:id="@+id/action_receiveFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragmentDest" />
    </fragment>
    <fragment
        android:id="@+id/sendFragment"
        android:name="com.example.wallet2.ui.send.SendFragment"
        android:label="SendFragment"
        tools:layout="@layout/fragment_send">
        <action
            android:id="@+id/action_sendFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragmentDest" />
        <action
            android:id="@+id/action_sendFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>